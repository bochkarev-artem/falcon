{
    "name": "artem.bochkarev/peregrine_falcon",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.5.9",
        "symfony/symfony": "3.*",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/monolog-bundle": "^2.8",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.0",
        "sensio/generator-bundle": "^3.0",
        "raulfraile/ladybug-bundle": "~1.0",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "sonata-project/admin-bundle": "3.*",
        "sonata-project/doctrine-orm-admin-bundle": "3.*",
        "ext-mbstring": "*",
        "ext-intl": "*",
        "sonata-project/seo-bundle": "^2.0",
        "friendsofsymfony/user-bundle": "~2.0@dev",
        "symfony/assetic-bundle": "^2.8",
        "leafo/scssphp": "^0.6.6",
        "patchwork/jsqueeze": "^2.0",
        "friendsofsymfony/elastica-bundle": "^3.2"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^3.0",
        "squizlabs/php_codesniffer": "2.*"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget",
            "rm -rf web/compiled/",
            "mkdir web/compiled/",
            "mkdir web/compiled/images/",
            "mkdir web/compiled/css/",
            "cp -R web/bundles/app/images/ web/compiled/",
            "cp -R web/bundles/app/fonts/ web/compiled/",
            "cp -R web/bundles/app/css/images/ web/compiled/css/images/",
            "rm -rf web/bundles/app/"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget",
            "rm -rf web/compiled/",
            "mkdir web/compiled/",
            "mkdir web/compiled/images/",
            "mkdir web/compiled/css/",
            "cp -R web/bundles/app/images/ web/compiled/",
            "cp -R web/bundles/app/fonts/ web/compiled/",
            "cp -R web/compiled/app/css/images/ web/compiled/css/images/",
            "rm -rf web/bundles/app/"
        ],
        "compile": [
            "~/falcon/bin/console assetic:dump --env=dev"
        ]
    },
    "config": {
        "platform": {
            "php": "7.0"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_host":     "RDS_HOSTNAME",
                "database_port":     "RDS_PORT",
                "database_name":     "RDS_DB_NAME",
                "database_user":     "RDS_USERNAME",
                "database_password": "RDS_PASSWORD"
            }
        }
    }
}
