{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}

{% block field %}
    {% if field_description.options.widget is defined %}
        {{ block(field_description.options.widget) }}
    {% else %}
        {{ value }}
    {% endif %}
{% endblock %}

{% block type %}
    {{ admin.getBookTypeLabel(value) }}
{% endblock %}