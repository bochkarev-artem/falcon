<!--WIDGET CATEGORIES WRAP START-->
<div class="widget widget-categories">
    <!--WIDGET HEADING START-->
    <div class="aside-widget-hd">
        <h5>{{ 'front.genres'|trans }}</h5>
    </div>
    <!--WIDGET HEADING END-->
    <div class="widget-padding">
        <!--WIDGET HEADING END-->
        <!--WIDGET ACCORDIAN START-->
        <div class="side_accordian">
            {% for parentGenre in parentGenres %}
                <div class="accordion">
                    <span>{{ parentGenre.title }}</span>
                </div>

                <div class="accordion-content">
                    <ul class="side-meta">
                        {% set childGenres = genres[parentGenre.id] %}
                        {%- for childGenre in childGenres -%}
                            {% set genreUrl = childGenre.pathPrefix ~ '/' ~ childGenre.slug %}
                            <li><a href="/{{ genreUrl }}">{{ childGenre.title }}</a></li>
                        {%- endfor -%}
                    </ul>
                </div>
            {% endfor %}
        </div>
        <!--WIDGET ACCORDIAN END-->
    </div>
</div>
<!--WIDGET CATEGORIES WRAP END-->