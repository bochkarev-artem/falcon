{% include '@App/Elements/View/view-toggle.html.twig' %}

<div  class="blog-list-wrap">
    <div class="blog-list-style">
        {% for book in books %}
            <!--LIST STYLE DEC START-->
            <div class="list-style-dec list-style-dec2">
                <div class="blog-thumb">
                    <img src="{{ book.cover_path|imagine_filter('book_list') }}" alt="">
                    <div class="blog-thumb-dec">
                        <a href="/{{ book.path }}"><i class="fa fa-book"></i></a>
                    </div>
                    {#<div class="ribbon-wrap">#}
                        {#<span class="ribbon">{{ 'front.new'|trans }}</span>#}
                    {#</div>#}
                </div>
                <div class="text">
                    <div class="blog1-hd">
                        <h5><a href="/{{ book.path }}">{{ book.title }}</a></h5>
                        {% if show_genre is defined and show_genre %}
                            {% set genre = book.genres|first %}
                            <a href="/{{ genre.path }}">{{ genre.title }}</a>
                        {% endif %}
                        {% if show_author is defined and show_author %}
                            {% set author = book.authors|first %}
                            <a href="/{{ author.path }}">{{ author.full_name }}</a>
                        {% endif %}
                    </div>
                    {{ book.annotation|raw }}
                    <div class="clear"></div>
                    <a class="btn-3" href="/{{ book.path }}">{{ 'front.to_book'|trans }}</a>
                </div>
            </div>
            <!--LIST STYLE END-->
        {% endfor %}
    </div>
</div>