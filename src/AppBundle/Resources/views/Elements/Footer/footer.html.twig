<footer class="footer-1">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="widget widget-text">
                    <div class="widget-hd">
                        <h3>{{ 'front.footer.title'|trans }}</h3>
                    </div>
                    <div>
                        {{ 'front.footer.description'|trans }}
                    </div>
                    <a href="{{ path('privacy') }}">{{ 'front.footer.politics'|trans }}</a>
                </div>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="widget contact-ft">
                    <div class="widget-hd">
                        <h3>{{ 'front.footer.contacts'|trans }}</h3>
                    </div>
                    <ul>
                        <li>
                            <span>
                                {{ 'front.email'|trans }}:
                            </span>
                            <div class="text">
                                <a href="mailto:{{ 'front.footer.email'|trans }}">{{ 'front.footer.email'|trans }}</a>
                            </div>
                        </li>
                        <li>
                            <span>
                                {{ 'front.footer.social_links'|trans }}:
                            </span>
                            <div class="text">
                                <ul class="social-1">
                                    <li><a href="{{ 'front.footer.vk_url'|trans }}" target="_blank"><i class="fa fa-vk"></i></a></li>
                                    <li><a href="{{ 'front.footer.twitter_url'|trans }}" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
