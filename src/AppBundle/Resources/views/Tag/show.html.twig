{% extends "@App/layout.html.twig" %}

{% block title %}{{ tag.title }}{% endblock %}

{% block body %}
    <div class="kf_content_wrap">
        <!--GRID 4 WRAP START-->
        <div class="grid-4">
            <div class="grid3-page">
                <div class="container">
                    <div class="row">
                        <!--ASIDE BAR WRAP START-->
                        <aside class="col-md-3">
                            {{ side_menu()|raw }}
                            {% include '@App/Elements/featured_books.html.twig' %}
                        </aside>
                        <!--ASIDE BAR WRAP END-->
                        <div class="col-md-9">
                            <div class="blog-grid3">
                                <div class="row">
                                    {% for book in books %}
                                        <!--BOOK DEC START-->
                                        <div class="col-md-4 col-sm-6">
                                            <div class="book-tab-dec">
                                                <figure>
                                                    <a href="/{{ book.path }}">
                                                        <img src="{{ book.cover_path|imagine_filter('book_list') }}" alt=""/>
                                                    </a>
                                                    {#<figcaption class="ribbon-wrap">#}
                                                    {#<span class="ribbon">{{ 'front.new'|trans }}</span>#}
                                                    {#</figcaption>#}
                                                </figure>
                                                <div class="text">
                                                    {% set author = book.authors|first %}
                                                    <small><a href="/{{ author.path }}">{{ author.full_name }}</a></small>
                                                    <h5><a href="/{{ book.path }}">{{ book.title }}</a></h5>
                                                </div>
                                            </div>
                                        </div>
                                        <!--BOOK DEC END-->
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        {% include '@App/Elements/pagination.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
        <!--GRID 4 WRAP END-->
    </div>
{% endblock %}