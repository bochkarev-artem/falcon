{% extends "@App/layout.html.twig" %}

{% block title %}{{ tag.title }}{% endblock %}

{% block body %}
    <div class="kf_content_wrap">
        <!--GRID 4 WRAP START-->
        <div class="grid-4">
            <div class="grid3-page">
                <div class="container">
                    <div class="row">
                        <!--ASIDE BAR WRAP START-->
                        <aside class="col-md-3">
                            {{ side_menu()|raw }}
                            {% include '@App/Elements/featured_books.html.twig' %}
                        </aside>
                        <!--ASIDE BAR WRAP END-->
                        <div class="col-md-9">
                            {% if view == 'column' %}
                                {% set show_author = true %}
                                {% include '@App/Elements/View/column.html.twig' %}
                            {% elseif view == 'list' %}
                                {% include '@App/Elements/View/list.html.twig' %}
                            {% endif %}
                        </div>
                        {% include '@App/Elements/pagination.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
        <!--GRID 4 WRAP END-->
    </div>
{% endblock %}