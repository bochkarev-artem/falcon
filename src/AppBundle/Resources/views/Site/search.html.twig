{% extends 'AppBundle::layout.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/book-list-page.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="kf_content_wrap">
        <div class="error-wrap">
            <form id="search" action="{{ path('search') }}">
                <div class="input-dec2">
                    <input name="query" id="search-query" autofocus
                           placeholder="{{ 'front.search'|trans }}" value="{{ query|default('') }}">
                    <button><i class="fa fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
{% endblock body %}