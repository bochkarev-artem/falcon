{% extends "@App/layout.html.twig" %}

{% block body %}
    <div class="kf_content_wrap">
        <div class="grid-4">
            <div class="grid3-page">
                <div class="container">
                    <div class="row">
                        <aside class="col-md-3">
                            {{ side_menu()|raw }}
                        </aside>
                        <div class="col-md-9">
                            <div class="main-content">
                                {% if view == 'column' %}
                                    {% include '@App/Elements/View/column.html.twig' %}
                                {% elseif view == 'list' %}
                                    {% include '@App/Elements/View/list.html.twig' %}
                                {% elseif view == 'grid' %}
                                    {% include '@App/Elements/View/grid.html.twig' %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}