{% extends "@App/layout.html.twig" %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/jquery.star-rating-svg.min.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/star-rating-svg.css') }}" />
{% endblock %}

{% block body %}
<div class="kf_content_wrap">
    <div class="grid-4">
        <div class="grid3-page">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="commenting-wrap-1 cutomer-reviews">
                            {% if view == 'ratings' %}
                                <h3>{{ 'front.book.rating'|trans }}</h3>
                            {% endif %}
                            {% if view == 'reviews' %}
                                <h3>{{ 'front.book.reviews'|trans }}</h3>
                            {% endif %}
                            <ul>
                                {% for book in books %}
                                    <li>
                                        <div class="commenting-dec">
                                            {% if book.coverPath is defined %}
                                                <figure>
                                                    <a href="/{{ book.path }}">
                                                        <img src="{{ book.coverPath|imagine_filter('book_list') }}" alt="{{ book.title }}"/>
                                                    </a>
                                                </figure>
                                            {% endif %}
                                            <div class="text">
                                                <div class="commenting-hd">
                                                    <div class="cutomer-rating">
                                                        <p>{{ book.updatedOn|date("d M Y g:ia") }}</p>
                                                    </div>
                                                </div>
                                                <p>
                                                    {% if show_genre is defined and show_genre and book.genres|length > 0 %}
                                                        {% set genre = book.genres|first %}
                                                        <div class="h5"><a href="/{{ genre.path }}">{{ genre.title }}</a></div>
                                                    {% endif %}
                                                    {% if show_author is defined and show_author and book.authors|length > 0 %}
                                                        {% set author = book.authors|first %}
                                                        <div class="h5"><a href="/{{ author.path }}">{{ author.shortName }}</a></div>
                                                    {% endif %}
                                                    <div class="h4"><a href="/{{ book.path }}">{{ book.title|truncate(40) }}</a></div>
                                                    {% if view == 'ratings' %}
                                                        <div>{{ bookRatings[book.id].rating }}</div>
                                                    {% endif %}
                                                    {% if view == 'reviews' %}
                                                        <div>{{ bookReviews[book.id].text }}</div>
                                                    {% endif %}
                                                </p>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                            {% include '@App/Elements/pagination.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}